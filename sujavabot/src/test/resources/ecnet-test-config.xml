<sujavabot>
	<nickname>sujavabot</nickname>
	<username>sujavabot</username>
	<realname>sujavabot</realname>
	<server-hostname>irc.ecnet.org</server-hostname>
	<auto-join-channel>
		<channel-name>#test</channel-name>
	</auto-join-channel>
	<auto-join-channel>
		<channel-name>#robin</channel-name>
	</auto-join-channel>
	<group>
		<name>root</name>
		<commands>
			<__parse-error class="org.sujavabot.core.commands.ParseErrorCommand" />
			<__unrecognized class="org.sujavabot.core.commands.UnrecognizedCommand" />
			<action class="org.sujavabot.core.commands.ActionCommand" />
			<echo class="org.sujavabot.core.commands.EchoCommand" />
			<more class="org.sujavabot.core.commands.MoreBufferCommand" />
		</commands>
	</group>
	<group>
		<name>admin</name>
		<parent>root</parent>
		<commands>
			<config class="org.sujavabot.core.commands.ConfigCommand" />
			<group class="org.sujavabot.core.commands.GroupAdminCommand" />
			<user class="org.sujavabot.core.commands.UserAdminCommand" />
		</commands>
	</group>
	<user>
		<name>@nobody</name>
		<nick>$^</nick>
		<group>root</group>
		<commands />
	</user>
	<user>
		<name>admin</name>
		<nick>robin</nick>
		<group>root</group>
		<group>admin</group>
		<owns-group>root</owns-group>
		<commands>
			<rb class="org.sujavabot.plugin.jruby.JRubyCommand">
				<source><![CDATA[
ARGV.to_s
				]]></source>
			</rb>
		</commands>
	</user>
	<listener class="org.sujavabot.core.commands.CommandReceiverListener">
		<prefix>!</prefix>
	</listener>
	<listener class="org.sujavabot.plugin.markov.MarkovListener">
		<table>markov-snackybot</table>
		<hbase.zookeeper.quorum>vps.robinvps.com</hbase.zookeeper.quorum>
		<maxlen>5</maxlen>
		<learn>false</learn>
		<channel>#test</channel>
		<channel>#robin</channel>
	</listener>
</sujavabot>
